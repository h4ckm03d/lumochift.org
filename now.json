{
    "version": 2,
    "name": "dev",
    "alias": ["lumochift.org"],
    "builds": [
        {
            "src": "build.sh",
            "use": "@now/static-build",
            "config": { "distDir": "public" }
        }
    ],
    "routes": [
        {
            "src": "/**/*.@(jpg|jpeg|gif|png|svg)",
            "headers": {
                "Cache-Control": "public, max-age=31536000" 
            },
            "continue": true
        },
        {
          "src": "/(.*)",
          "headers": {
              "Cache-Control": "public, max-age=3600" 
            },
            "continue": true
        }
    ],
    "public": true
}